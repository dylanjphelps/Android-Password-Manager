<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plainbackground"
    android:orientation="vertical" >

    <TextView
    android:id="@+id/text"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:focusable="true"
    android:nextFocusDown="@+id/btn_edit"

    android:layout_marginTop="95dp"
    android:paddingLeft="85dp"
    android:paddingRight="20dp"
    android:textSize="15dp"
    android:textColor="#B22222" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Cancel"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_view2"
        android:text="Font size 25dp "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B22222"

        android:layout_alignBottom="@+id/btn_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_gravity="right" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Edit"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Copy"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/btn_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Delete"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/btn_copy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:focusable="true"
        android:nextFocusDown="@+id/btn_edit"

        android:layout_marginTop="70dp"
        android:paddingLeft="85dp"
        android:paddingRight="20dp"
        android:textSize="20dp"
        android:textColor="#B22222" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_cancel"
        android:layout_alignRight="@+id/btn_cancel"
        android:layout_alignEnd="@+id/btn_cancel" />


</LinearLayout>