<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wwjdt.passphrasegenerator.content"

    android:background="@drawable/contentbackground">

    <EditText
        android:id="@+id/accountNameTxt"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Search Account"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ListView1"
        android:layout_alignEnd="@+id/ListView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:onClick="logout"
        android:background= "@android:color/transparent"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:layout_alignTop="@+id/addButton"
        android:layout_alignRight="@+id/ListView1"
        android:layout_alignEnd="@+id/ListView1" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:onClick="Add"
        android:background= "@drawable/roundbutton"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/logoutButton"
        android:layout_toStartOf="@+id/logoutButton" />

    <ListView
        android:id="@+id/ListView1"
        android:layout_width="500dp"
        android:layout_height="365dp"
        android:choiceMode="singleChoice"
        android:dividerHeight="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/accountNameTxt">

    </ListView>

</RelativeLayout>
