<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/plainbackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:focusable="true"
        android:nextFocusDown="@+id/btn_edit"
        android:text="HELLO"
        android:layout_marginTop="75dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="20dp"
        android:textColor="#000000"
       />

    <TextView
        android:id="@+id/text_view2"
        android:text="Font size 25dp "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" />

    <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
        android:background="@android:color/transparent"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Edit"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_copy"
        android:layout_toStartOf="@+id/btn_copy" />
    <Button
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Copy"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_toStartOf="@+id/btn_delete" />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Delete"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_cancel"
        android:layout_toStartOf="@+id/btn_cancel" />


</RelativeLayout>